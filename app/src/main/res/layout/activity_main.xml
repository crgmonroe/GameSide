<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="comcraigmonroeprojects.google.httpsplus.gameside.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fieldbackground"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/app_greeting"
            android:ems="10"
            android:layout_weight="0.01"
            android:textColor="@color/promptColor"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:ems="10"
            android:gravity="center_horizontal"
            android:text="@string/team_name_prompt"
            android:textColor="@color/promptColor"
            />


        <EditText
            android:id="@+id/team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColorHint="@color/promptColor"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textColor="@color/promptColor"
            android:visibility="visible"
            tools:focusableInTouchMode="true" />


        <Spinner
            android:id="@+id/spinner_color"
            android:textColor="@color/promptColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Team Name" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close App"
            android:onClick="clickExit"
            />


    </LinearLayout>

</RelativeLayout>
